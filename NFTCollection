// create a variable to hold your NFT's
const myNFTs = []
// this function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT (name, headgear, eyewear, accessories) {
    const NFT = {
        "name": name,
        "headgear" : headgear,
        "eyewear" : eyewear,
        "accessories" : accessories,
    }
    myNFTs.push(NFT);
    console.log("Minted: " + name);
}
// create a "loop" that will go through an "array" of NFT's
// and print their metadata with console.log()
function listNFTs () {
    for (let i = 0; i < myNFTs.length; i++){
        console.log("NFT ID: " + (i + 1));
        console.log("\nName: " + myNFTs[i].name);
        console.log("Headgear: " + myNFTs[i].headgear);
        console.log("Eyewear: " + myNFTs[i].eyewear);
        console.log("Accessories: " + myNFTs[i].accessories);
        console.log("------------------------");
    }
}

// print the total number of NFTs we have minted to the console
function getTotalSupply() {
    console.log("\n" + myNFTs.length);
}

// call your functions below this line
mintNFT("George", "Blue Hat", "Aviator Glasses", "Black Necklace");
mintNFT("Cindy", "Red Hat", "Sunglasses", "Scarf");
mintNFT("Oscar", "Baseball Cap", "None", "Lanyard");
mintNFT("Charles", "Crown", "Monocle", "Staff");
mintNFT("Doug", "Beanie", "Glasses;", "Watch");

listNFTs();
getTotalSupply();
